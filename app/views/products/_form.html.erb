<%= form_with model: [@brand, @product] do |form| %>
  <% @product.errors.full_messages_for(:name).each do |message| %>
      <div class="error-message text-danger"><%= message %></div>
    <% end %>

  <div>
    <%= form.label :name, "商品名" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :price, "価格" %>
    <%= form.number_field :price, step: 0.01 %>
  </div>

  <div>
    <%= form.label :body, "商品説明" %>
    <%= form.text_area :body, rows: 5 %>
  </div>

  <div>
    <%= form.label :production_started_on, "生産開始日" %>
    <%= form.date_field :production_started_on %>
  </div>

  <div>
    <%= form.submit @product.new_record? ? "商品を登録" : "商品を更新" %>
  </div>
<% end %>
